// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id           Int     @id @default(autoincrement())
  name         String
  description  String
  durationDays Int     @db.UnsignedInt
  optional     Boolean @default(false)

  filters Filter[]

  @@map("categories")
}

model Filter {
  id             Int      @id @default(autoincrement())
  categoryId     Int
  expirationDate DateTime
  createdAt      DateTime @default(now())

  category Category @relation(fields: [categoryId], references: [id])

  @@map("filters")
}

model Refill {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  products ProductsOnRefills[]

  @@map("refills")
}

model Product {
  id               Int             @id @default(autoincrement())
  name             String          @unique
  category         ProductCategory
  quantity         String?
  frequencyInDays  Int?
  useWhenRefilling Boolean
  createdAt        DateTime        @default(now())

  refills ProductsOnRefills[]

  @@map("products")
}

model ProductsOnRefills {
  id        Int      @id @default(autoincrement())
  refillId  Int
  productId Int
  createdAt DateTime @default(now())

  refill  Refill  @relation(fields: [refillId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("products_on_refills")
}

enum ProductCategory {
  WATER
  PLANT
}
